<Window x:Class="InventorySystem.ProductProfit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        mc:Ignorable="d"
        Title="ProductProfit" MaxHeight="350" MaxWidth="600">
    <Grid Background="LightGray">
        <!--Window to display product profits-->
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        
        <!--Title-->
        <TextBlock Grid.Row="0" Text="Product Profits" FontSize="20" Foreground="Orange" HorizontalAlignment="Center"/>
        
        <!--Data grid to display product and profit!-->
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" x:Name="profits" Grid.Row="1" VerticalContentAlignment="Center" Width="200 " ItemsSource="{Binding Products}">
            <DataGrid.Columns>
                <DataGridTextColumn Width="100" Header ="Product" Binding="{Binding ProductName}" />
                <DataGridTextColumn Width="100" Header ="Profit" Binding="{Binding Profit}" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <!--Export to csv btn-->
            <Button Grid.Column="0" Content="Export to CSV" Height="35" Width="120" Background="Green" Click="Button_Click_1"/>
            
            <!--Close window btn-->
            <Button Grid.Column="1" Content="Close" Height="35" Width="120" Background="Red" Click="Button_Click"/>
        </Grid>

    </Grid>
</Window>
