<Window x:Class="InventorySystem.EditProductPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        mc:Ignorable="d"
        Title="EditProductPanel" MaxHeight="450" MaxWidth="800">
   
        <!--Edit product inputs-->
    <Grid Background="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>

                <RowDefinition/>


            </Grid.RowDefinitions>
            <!--User controls for product inputs!-->
            <!--Title-->
            <TextBlock Text="Edit Product" HorizontalAlignment="Center" FontSize="20" Foreground="Orange" VerticalAlignment="Center"/>

            <!--Product name-->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="1">
                <Label Content="Name:" VerticalAlignment="Center" Width="110" FontSize="20"/>
                <TextBox VerticalContentAlignment="Center" x:Name="edit_product_name" Width="120" Height="35"/>

            </StackPanel>

            <!--Category-->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="2">
                <Label Content="Category:" VerticalAlignment="Center" Width="110" FontSize="20"/>
            <ComboBox Width="120" SelectedIndex="0"  FontSize="16" Height="30" Name="edit_categories">
                    <ComboBoxItem Content="Electronics" />
                    <ComboBoxItem Content="Office" />
                    <ComboBoxItem Content="Hardware" />
                    <ComboBoxItem Content="mobile" />
                    <ComboBoxItem Content="games" />
                </ComboBox>

            </StackPanel>

            <!--Quantity-->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="3">
                <Label Content="Quantity:" VerticalAlignment="Center" Width="110" FontSize="20"/>
            <TextBox VerticalContentAlignment="Center" x:Name="edit_quantity" Width="120" Height="35"/>

            </StackPanel>

            <!--Purchase price-->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="4">
                <Label Content="Purchase price:" VerticalAlignment="Center" Width="110" FontSize="14.5"/>
            <TextBox VerticalContentAlignment="Center" x:Name="edit_purchase_price" Width="120" Height="35"/>

            </StackPanel>

            <!--Selling price-->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="5">
                <Label Content="Selling price:" VerticalAlignment="Center" Width="110" FontSize="15.5"/>
            <TextBox VerticalContentAlignment="Center" x:Name="edit_selling_price" Width="120" Height="35"/>

            </StackPanel>

            <!--Description-->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="6">
                <Label Content="Description:" VerticalAlignment="Center" Width="110" FontSize="19"/>
            <TextBox VerticalContentAlignment="Center" x:Name="edit_description" Width="120" Height="35"/>

            </StackPanel>

             <!--Save and cancel btn-->
            <Grid  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>

                </Grid.ColumnDefinitions>

                <!--Save product btn-->
                <Button x:Name="edit" Width="120" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35" Background="Green" Content="Update Product" Click="edit_Click" />

                <!--Cancel btn-->
                <Button x:Name="cancel" Width="120"  Margin="5,5,0,5"  Height="35" Background="Red" Content="Cancel" Grid.Column="1" HorizontalAlignment="Left" Click="cancel_Click"/>
            </Grid>

        </Grid>
</Window>
