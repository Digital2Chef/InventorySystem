<Window x:Class="InventorySystem.DisplayProductsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        mc:Ignorable="d"
        Title="DisplayProductsPage" MaxHeight="450" MaxWidth="850">
    <Grid Background="LightGray">
        <!-- Displaying products page-->
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="315"/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>
        
        <!--Title-->
        <TextBlock Text="Product List" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="Orange"/>

        <!--Data grid to display products-->
        <DataGrid SelectedItem="{Binding SelectedItem, Mode=TwoWay}" x:Name="productList" Grid.Row="1" Width="Auto"   ItemsSource="{Binding Products}" IsReadOnly="True" AutoGenerateColumns="False" Margin="10" >
            <DataGrid.Columns>
            <DataGridTextColumn Header="Product Id" Width="*"  Binding="{Binding ProductId}" />
            <DataGridTextColumn Header="Product Name" Width="*"  Binding="{Binding ProductName}" />
            <DataGridTextColumn Header="Category" Width="*"  Binding="{Binding Category}" />
            <DataGridTextColumn Header="Quantity" Width="*"  Binding="{Binding Quantity}" />
            <DataGridTextColumn Header="Purchase price" Width="*"  Binding="{Binding PurchasePrice}" />
            <DataGridTextColumn Header="Selling price" Width="*"  Binding="{Binding SellingPrice}" />
            <DataGridTextColumn Header="Description" Width="*"  Binding="{Binding Description}" />
                <DataGridTextColumn Header="Total Stock's Profit" Width="*"  Binding="{Binding Profit}" />
            </DataGrid.Columns>
        </DataGrid>
        
       

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

         <!--CSV-->
            <Button x:Name="csv" Content="Export to csv" Width="120" Height="35" Background="Green" HorizontalAlignment="Left" Click="csv_Click"/>

            <!--Edit product-->
            <Button x:Name="edit" Content="Edit Product" Width="120" Height="35" Background="Orange" Grid.Column="1" Click="edit_Click"/>
            
            <!--Delete product-->
            <Button x:Name="delete" Content="Delete" Width="120" Height="35" Background="Red" Grid.Column="2" Click="delete_Click"/>
            <!--Go back button-->
            <Button x:Name="back" Content="Back" Background="Yellow" Width="120" Height="35" Grid.Column="3" HorizontalAlignment="Right" Click="back_Click"/>
        </Grid>
    </Grid>
</Window>
