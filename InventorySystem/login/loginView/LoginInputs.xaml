<UserControl x:Class="InventorySystem.login.loginView.LoginInputs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventorySystem.login.loginView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="280">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
            <!--Login Inputs-->
        <!--Title-->
        <TextBlock Text="Login Screen" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Orange" FontSize="20"/>
        
        <!--Username-->
        <StackPanel Margin="10" Orientation="Horizontal" Grid.Row="1">
            <Label Content="Username:" Width="110" VerticalAlignment="Center" FontSize="20"/>
            <TextBox VerticalContentAlignment="Center" x:Name="username" Width="130" Height="35" />
        </StackPanel>
        
        <!--Password-->
        <StackPanel Margin="10" Orientation="Horizontal" Grid.Row="2">
            <Label Content="Password:" Width="110" VerticalAlignment="Center" FontSize="20"/>
            <PasswordBox VerticalContentAlignment="Center" x:Name="password" Width="130" Height="35" />
        </StackPanel>
        
        <!--Login and terminate app btns-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            
            <!--Login btn-->
            <Button x:Name="login" Width="100" Height="35" Background="Green" Content="Login" Click="login_Click"/>
            
            <!--Register Button-->
            <Button x:Name="register" Grid.Column="1" Width="100" Height="35" Background="Orange" Content="Register" Click="register_Click" />
            
        </Grid>

        <Button x:Name="exit" Grid.Row="4" Width="50"  HorizontalAlignment="Right" Height="35" Background="Red" Content="Exit" Click="exit_Click"/>
    </Grid>
</UserControl>
