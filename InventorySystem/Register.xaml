<Window x:Class="InventorySystem.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        mc:Ignorable="d"
        Title="Register" Height="350" Width="350">
    <Grid Background="LightGray">
        <!--Register page!-->
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        
        <!--Title-->
        <TextBlock Text="Register" Grid.Row="0" FontSize="20" Foreground="Orange" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <!--Username-->
        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Orientation="Horizontal">
            <Label Content="Username:" Width="180" VerticalAlignment="Center" FontSize="20" />
            <TextBox VerticalContentAlignment="Center" x:Name="username_register" Width="120" Height="35"/>
        </StackPanel>
        
        <!--Password-->
        <StackPanel HorizontalAlignment="Center" Grid.Row="2" Orientation="Horizontal">
            <Label Content="Password:" Width="180" VerticalAlignment="Center" FontSize="20" />
            <PasswordBox VerticalContentAlignment="Center" x:Name="password_register" Width="120" Height="35"/>
        </StackPanel>
        
        <!--Confirm password-->
        <StackPanel HorizontalAlignment="Center" Grid.Row="3" Orientation="Horizontal">
            <Label Content="Confirm Password:" Width="180" VerticalAlignment="Center" FontSize="20" />
            <PasswordBox VerticalContentAlignment="Center" x:Name="confirm_pass" Width="120" Height="35"/>
        </StackPanel>
        
        <!--Register/cancel btns-->
        <Grid Width="280" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
        <!--Register btn-->
            <Button x:Name="register" Content="Register" Background="Green" Width="120" Height="35" Click="register_Click"/>
            
            <!--Cancel btn-->
            <Button x:Name="cancel" Content="Cancel" Background="Red" Grid.Column="1" Width="120" Height="35" Click="cancel_Click"/>
        </Grid>
    </Grid>
</Window>
